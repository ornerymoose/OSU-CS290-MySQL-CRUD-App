<h3>Workouts</h3>

<form>
	<div class="form-group">
		<label for="name">Workout Name</label>
		<input type="text" name="name" class="form-control" id="workout-name" placeholder="Enter Workout Name">
	</div>
	<div class="form-group">
		<label for="">Reps</label>
		<input type="number" name="reps" class="form-control" id="workout-reps" placeholder="Enter Reps">
	</div>
	<div class="form-group">
		<label for="">Weight</label>
		<input type="number" name="weight" class="form-control" id="workout-weight" placeholder="Enter Weight">
	</div>
	<div class="form-group">
		<label for="">Date</label>
		<input type="date" name="date" class="form-control" id="workout-date" placeholder="Enter Date">
	</div>
		<div class="form-group">
		<button type="submit" class="btn btn-primary insert-data">Submit New Workout</button>
	</div>
</form>

{{#if rows}}
<table class="table table-bordered table-striped table-hover table-condensed">
    <thead>
    	<tr>
			<th>Name</th>
			<th>Reps</th>
			<th>Weight</th>
			<th>Date</th>
			<th>Lbs</th>
			<th>Action</th>
    	</tr>
    </thead>
    <tbody>
    	{{#each rows}}
    	<tr id="workout-{{{id}}}">
    		<td>{{name}}</td>
    		<td>{{reps}}</td>
    		<td>{{weight}}</td>
    		<td>{{date}}</td>
    		<td>{{lbs}}</td>
    		<td>
				<button type="button" class="btn btn-default edit-row" id={{id}}>
					<span class="glyphicon glyphicon-pencil"></span>
				</button>
				<button type="button" class="btn btn-default delete-row" id={{id}}>
					<span class="glyphicon glyphicon-trash"></span>
				</button>
    		</td>
    	</tr>
    	{{/each}}
    </tbody>

</table>
{{/if}}

