<h3>Workouts</h3>

{{#if rows}}
<table class="table table-bordered table-striped table-hover table-condensed">
    <thead>
    	<tr>
			<th>Name</th>
			<th>Reps</th>
			<th>Weight</th>
			<th>Date</th>
			<th>Lbs</th>
			<th>Action</th>
    	</tr>
    </thead>
    <tbody>
    	{{#each rows}}
    	<tr>
    		<td>{{name}}</td>
    		<td>{{reps}}</td>
    		<td>{{weight}}</td>
    		<td>{{date}}</td>
    		<td>{{lbs}}</td>
    		<td>
				<button type="button" class="btn btn-default">
					<span class="glyphicon glyphicon-pencil"></span>
				</button>
				<button type="button" class="btn btn-default">
					<span class="glyphicon glyphicon-trash"></span>
				</button>
    		</td>
    	</tr>
    	{{/each}}
    </tbody>

</table>
{{/if}}

